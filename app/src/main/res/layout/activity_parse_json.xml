<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learn.ashwini.gomovie.parseJson">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/database"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/location"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/user"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="115dp"
            android:src="@drawable/follower"
            />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="200dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="83dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/followerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="118dp"
            android:layout_marginRight="200dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/profilepic"/>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="220dp"
        android:id="@+id/showUser"
        android:background="@drawable/profile"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/showRepos"
        android:background="@drawable/repo"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_alignBottom="@+id/showUser"
        android:layout_alignRight="@+id/card_view"
        android:layout_alignEnd="@+id/card_view"
        android:layout_marginBottom="14dp" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/starredRepos"
        android:background="@drawable/starred"
        android:layout_below="@+id/showUser"
        android:layout_alignLeft="@+id/showRepos"
        android:layout_alignStart="@+id/showRepos" />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/userFollowers"
        android:layout_marginLeft="30dp"
        android:background="@drawable/followers"
        android:layout_below="@+id/showRepos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
